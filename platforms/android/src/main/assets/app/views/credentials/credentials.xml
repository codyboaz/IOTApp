<Page loaded="pageLoaded">
    <ActionBar>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
            <Label text="Linkality" class="action-label"></Label>
        </StackLayout>
    </ActionBar>
    <ScrollView>
        <StackLayout>
            <Label text="Welcome to the 2016 CSUMB Capstone Festival" class="h1 margin" textWrap="true"/>
            <Image src="~/views/images/linkality.png" class="buildingImg" />
            <Label text="Press Enter to continue" class="h2 margin" textWrap="true"/>
            <button text="Enter" tap="homepage" class="btnRooms btn-outline margin-btn"/>
            <button text="Instructions" tap="instructions" class="btnRooms btn-outline margin-btn"/>
            <Label text="" class="margin"/>
        </StackLayout>
    </ScrollView>
</Page>
