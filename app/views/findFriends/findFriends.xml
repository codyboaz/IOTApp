<Page loaded="pageLoaded">
    <ActionBar>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
            <Label text="Linkality" class="action-label"></Label>
        </StackLayout>
    </ActionBar>
    <ScrollView>
        <StackLayout>
            <Label text="Find Your Friends" class="h1 margin" textWrap="true"/>
            <Image src="~/views/images/signal.png" class="buildingImg"/>
            <Label text="Enter your friends secret identifier" class="h2 margin" textWrap="true"/>
            <StackLayout class="form">
            <TextField class="input input-border input-hieght"></TextField>
            </StackLayout>
            <button text="Search" tap="friendLocation" class="btnRooms btn-outline margin"/>
            <Label text="" class="margin"/>
        </StackLayout>
    </ScrollView>
</Page>
