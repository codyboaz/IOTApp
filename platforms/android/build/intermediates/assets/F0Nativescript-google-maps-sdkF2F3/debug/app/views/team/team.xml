<Page loaded="pageLoaded">
    <ActionBar>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="left">
            <Label text="Linkality" class="action-label"></Label>
            <NavigationButton text="Back"/>
        </StackLayout>
    </ActionBar>
    
    <ScrollView>
        <StackLayout>
            <Label text="{{teamName}}" class="h1 centerText" textWrap="true"/>
            <Image src="{{logoName}}" class="teamLogo"/>
            <Label text="Project Description" class="h2 centerText"/>
            <Label text="{{description}}" class="margin-left-right" textWrap="true"/>
            <Label text="Team Members" class="h2 centerText"/>
            <Label text="{{team}}" class="margin-left-right" textWrap="true"/>
            <Label text="{{mentor}}" class="margin-left-right"/>
            <Label text="" class="margin"/>
        </StackLayout>
    </ScrollView>
</Page>
